<h1 class="title">Apply</h1>
<div class="container">
  <div class="card">
    <h2 class="card-title">{{vacancy.title}}</h2>
    <form class="login-form" action="" method="post">
      <input class="apply-input" name="title" placeholder="Subject:" required>
      <input class="apply-input" type="email" placeholder="E-Mail:" required>
      <textarea class="apply-textarea" name="title" id="" cols="30" rows="10" placeholder="Message:"></textarea>
    </form>
    <a class="btn-contact-company" href="/apply">Send E-Mail</a>
    <a class="btn-back-to-list" href="/vacancies">Back to list</a>

  </div>
</div>