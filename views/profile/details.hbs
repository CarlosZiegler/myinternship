<div class="signin-page">
  <form id="signin-form" action="/profile/update" method="POST">
    <h1>Profile</h1>
    <img class="user-avatar" src="{{user.avatarUrl}}" alt="photo_image">
    <label for="username">Username</label>
    <input class="input-text" type="text" id="username" name="username" value="{{user.username}}" required/><br>
    <label for="displayName">Name</label>
    <input class="input-text" type="text" id="displayName" name="displayName" value="{{user.displayName}}" required/><br>
    <label for="email">E-mail</label>
    <input class="input-text" type="text" id="email" name="email" value="{{user.email}}" required/><br>
    <button type="apply">Apply changes</button>
    <a class="btn-back-to-list" href="/vacancies">Back to List</a>
  </form>
</div>
