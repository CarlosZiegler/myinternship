<div class="signin-page">
  <form id="signin-form" action="/auth/signup" method="POST">
    <h1>Profile</h1>
    <img src="images/image.jpg" alt="photo image">
    <label for="username">Username</label>
    <input class="input-text" type="text" id="username" name="username" placeholder="Username" required/><br>
    <label for="displayName">Name</label>
    <input class="input-text" type="text" id="displayName" name="displayName" placeholder="Name" required/><br>
    <label for="email">E-mail</label>
    <input class="input-text" type="text" id="email" name="email" placeholder="Email" required/><br>
    <button type="apply">Apply changes</button>
  </form>
</div>
