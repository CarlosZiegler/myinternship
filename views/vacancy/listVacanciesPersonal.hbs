<div class="user-info">
  <img class="user-avatar" src="{{user.avatarUrl}}" />
  <h2 class="user-name">{{user.displayName}}</h2>
  <div class="edit-perfil">
    <span>
      <form action="/profile" method="GET">
        <button class="edit-icon" type="submit"><img src="/images/profile.svg" alt=""></button>
      </form>
    </span>
    <span>
      <form action="/myvacancies/{{_id}}" method="GET">
        <button class="edit-icon" type="submit"><img src="/images/heart.svg" alt=""></button>
      </form>
    </span>
    {{!-- <span>
      <form action="/apply/myapplies/{{_id}}" method="GET">
        <button class="edit-icon" type="submit"><img src="/images/check.svg" alt=""></button>
      </form>
    </span> --}}
  </div>
</div>
<div class="find-bar">
  <form class="find-form" action="/vacancies/filters" method="GET">
    <input id="find-input" type="text" class="find-input" placeholder="Search for title" name="title">
    <select name="category" id="category">
      <option value="" selected disabled hidden>Category</option>
      {{#each uniqueCategories}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}

    </select>
    <select name="location" id="location">
      <option value="" selected disabled hidden>Location</option>
      {{#each uniqueLocations}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <button class="btn-primary" type="submit">Find</button>
  </form>
</div>
{{#if filters}}
<ul class="filters-list">Filters:
  {{#each filters}}
  {{#if this}}
  <li class="filters-item">{{this}}</li>
  {{/if}}
  {{/each}}
</ul>
{{/if}}
<form class="find-form" action="/vacancies" method="GET">
  <button class="btn-reset" type="submit">Delete filters</button>
</form>
<div class=" container">
  {{#unless vacancies}}
  <h2>Not Found</h2>
  {{/unless}}
  {{#each vacancies}}
  <div class="card">
    <h2 class="card-title">{{title}}</h2>
    <div class="card-body">
      <p class="card-description">Category: {{category}}</p>
      <p class="card-description">Company: {{companyId.displayName}}</p>
      <div class="card-tags">
        {{#each tags}}
        <span class="card-tags-item">{{this}}</span>
        {{/each}}
      </div>
    </div>
    <a class="btn-primary" href="/vacancy/details/{{_id}}">See more</a>
  </div>
  {{/each}}
</div>