<h1 class="title">Vacancies</h1>
<div class="container">
  {{#each vacancies}}
  <div class="card">
    <h2 class="card-title">{{title}}</h2>
    <p class="card-description">Category: {{category}}</p>
    <p class="card-description">Tags: {{category}}</p>
    {{#each vacancies.tags}}
    <p class="card-description">{{this}}</p>
    {{/each}}
    <a class="btn-primary" href="/vacancy/details/{{_id}}">See more</a>
  </div>
  {{/each}}
</div>