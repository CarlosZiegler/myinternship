<h1 class="title">Vacancies</h1>
<a class="btn btn-back" href="/vacancy/create">Add new Vacancy</a>
<div class="container">
  {{#each vacancies}}
  <div class="card">
    <span>
      <form action="/vacancy/delete/{{_id}}" method="POST">
        <button type="submit">Delete</button>
      </form>
    </span>
    <h2 class="card-title">{{title}}</h2>
    <p class="card-description">Category: {{category}}</p>
    <p class="card-description">Tags: {{category}}</p>
    {{#each vacancies.tags}}
    <p class="card-description">{{this}}</p>
    {{/each}}
    <a class="btn" href="/vacancy/details/{{_id}}">See more</a>
  </div>
  {{/each}}
</div>